#!/usr/bin/env python3
"""Convenient script to run lu commands directly."""

import sys
import os
import subprocess

def main():
    """Run lu command using uv."""
    # Get the directory of this script
    script_dir = os.path.dirname(os.path.abspath(__file__))
    
    # Build command
    cmd = ["uv", "run", "python", "main.py"] + sys.argv[1:]
    
    # Change to script directory and run
    os.chdir(script_dir)
    subprocess.run(cmd)

if __name__ == "__main__":
    main()
